{
  "name": "jurni",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier '**/*.{cjs,mjs,js,jsx,ts,tsx,css,scss,sass,md}' --cache --write",
    "prepare": "husky",
    "seed:generate": "tsx src/db/scripts/seed-generate.ts",
    "db:studio": "drizzle-kit studio --config src/db/drizzle.config.ts",
    "db:clear": "tsx src/db/scripts/clear-db.ts",
    "db:push": "drizzle-kit push --config src/db/drizzle.config.ts",
    "db:clear-push": "npm run db:clear && drizzle-kit push --config src/db/drizzle.config.ts",
    "db:seed": "tsx src/db/scripts/seed-db.ts",
    "db:reset": "npm run db:clear-push && npm run db:seed",
    "db:gen-seed-reset": "npm run seed:generate && npm run db:reset"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.8.0",
    "@neondatabase/serverless": "^0.10.4",
    "@sindresorhus/slugify": "^2.2.1",
    "bcryptjs": "^3.0.2",
    "drizzle-orm": "^0.40.0",
    "nanoid": "^5.1.5",
    "next": "15.2.0",
    "next-auth": "^5.0.0-beta.25",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^9.7.0",
    "@next/env": "^15.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9",
    "eslint-config-next": "15.2.0",
    "eslint-config-prettier": "^10.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "tsx": "^4.19.3",
    "typescript": "^5"
  }
}
